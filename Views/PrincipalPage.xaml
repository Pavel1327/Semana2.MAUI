<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana2.MAUI.Views.PrincipalPage"
             Title="vPrincipal">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="Ventana Principal: Recibir datos desde login"
                   FontSize="20"
                   HorizontalOptions="Center"
                   Margin="0,0,0,12"/>

            <Label x:Name="lblBienvenida"
                   FontSize="18"
                   TextColor="White"/>

            <Button Text="Ir al Sistema de Calificaciones (S2)"
                    BackgroundColor="#A5B4FC"
                    Clicked="BtnIrCalificaciones_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
